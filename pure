<?php

if( count($argv) <= 1 ){
	echo "\n\n\tWelcome to PURE\n\n\n";
    return;
}

require_once __DIR__ . '/boot.php';
require_once __DIR__ . '/libraries/Terminal.php';
require_once __DIR__ . '/libraries/Command.php';

Pure\CLI\Terminal::path( __DIR__ . '/cli' );
$terminal = new Pure\CLI\Terminal();
// Remove the first element cause equals to "pure"
array_shift( $argv );
$terminal->run( $argv );

?>
